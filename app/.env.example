# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI APIs (direct, not via Vercel AI Gateway)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
GOOGLE_AI_API_KEY=your-google-ai-key
PERPLEXITY_API_KEY=pplx-your-perplexity-key
TAVILY_API_KEY=tvly-your-tavily-key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Preview Mode
# Set to 'false' to disable coming soon page and allow public access
COMING_SOON_ENABLED=true

# Secret key for preview access
# Share this URL with your partner: https://yourdomain.com?preview=YOUR_SECRET_HERE
PREVIEW_SECRET=change-this-to-a-random-string

# Resend Email Service
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=reports@outrankllm.io

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs - Australian pricing (AUD)
# Create these in Stripe Dashboard with AUD currency
STRIPE_PRICE_STARTER_AU=price_starter_aud
STRIPE_PRICE_PRO_AU=price_pro_aud
STRIPE_PRICE_AGENCY_AU=price_agency_aud

# Stripe Price IDs - International pricing (USD)
# Create these in Stripe Dashboard with USD currency
STRIPE_PRICE_STARTER_USD=price_starter_usd
STRIPE_PRICE_PRO_USD=price_pro_usd
STRIPE_PRICE_AGENCY_USD=price_agency_usd

# Legacy price IDs (deprecated - use region-specific IDs above)
# These are used as fallbacks if region-specific IDs are not set
STRIPE_PRICE_STARTER=price_starter_fallback
STRIPE_PRICE_PRO=price_pro_fallback
STRIPE_PRICE_AGENCY=price_agency_fallback

# JWT Secret for authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Inngest (background jobs)
INNGEST_SIGNING_KEY=signkey-your-signing-key
INNGEST_EVENT_KEY=your-event-key
